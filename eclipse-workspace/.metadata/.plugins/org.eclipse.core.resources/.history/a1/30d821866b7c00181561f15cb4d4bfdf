
public class LastIndexOfNumber {


	public static int lastIndex(int input[], int x) {
		
		if(input.length==0)
			return -1;
		
		else
		{
			
			int temp[]=new int[input.length-1];
			for(int i=0;i<input.length-1;i++)
			{
				temp[i]=input[i+1];
				
			}
			
			int checkIndex=lastIndex(temp,x);
			if(checkIndex==-1)
			{
				if(input[0]==x)
					return 0;
				
				
				
				
			}
			return checkIndex;
			
			
			
			
			
			
			
		}
      
      
   
      
	}
	
}
	
	
